---
import PageLayout from '@/layouts/PageLayout.astro';
import PostListSimple from '@/components/PostListSimple.astro';
import CardRecentPost from '@/components/AsideCards/CardRecentPost.astro';
import CardCategroies from '@/components/AsideCards/CardCategroies.astro';
import CardTagCloud from '@/components/AsideCards/CardTagCloud.astro';
import posts_all from '@/content/posts';

export async function getStaticPaths() {
  const postsWithTags = posts_all.filter(post=>post.data.tags)
  const uniqueTags = [...new Set(postsWithTags.map((post) => post.data.tags).flat())];
  return uniqueTags.map((tag) => {
    const filteredPosts = postsWithTags.filter((post) => post.data.tags!.includes(tag!));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<PageLayout title={`标签 - ${tag}`} titleIcon="mdi:tag">
  <aside slot="aside">
    <CardRecentPost/>
    <CardTagCloud/>
    <CardCategroies/>
  </aside>
  <PostListSimple posts={posts}/>
</PageLayout>