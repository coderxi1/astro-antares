    </Markdown>
  </div>

  <If condition={posts.length > 0}>
    <div class="mb5">
      <PostCard post={posts[0]} showBody>
        <span class="ml2 btn-sm text-textPrim" slot="title-after">æœ€æ–°æ–‡ç« </span>
      </PostCard>
    </div>
  </If>
  
  <If condition={posts.length > 1}>
    <div class="flex flex-wrap">
      {posts.slice(1,5).map((post,i) => (
        <div class="inline-block card p5 mb5 w-[calc(50%-6px)]" style={i%2==0?'margin-right:12px':''}>
          <div><PostSummary {post}/></div>
        </div>
      ))}
    </div>
  </If>

</BaseLayout>
