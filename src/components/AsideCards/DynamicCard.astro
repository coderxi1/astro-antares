---
import If from '../atomic/If.astro'
import CardBase from './CardBase.astro'
import CardInfo from './CardInfo.astro'
import CardRecentPost from './CardRecentPost.astro'
import CardCategroies from './CardCategroies.astro'
interface Props {
  name: string
  props: any
}
const { name, props } = Astro.props
---

<If condition={name === 'CardBase'}>
  <CardBase {...props}><slot/></CardBase>
</If>

<If condition={name === 'CardInfo'}>
  <CardInfo {...props}><slot/></CardInfo>
</If>

<If condition={name === 'CardRecentPost'}>
  <CardRecentPost {...props}><slot/></CardRecentPost>
</If>

<If condition={name === 'CardCategroies'}>
  <CardCategroies {...props}><slot/></CardCategroies>
</If>